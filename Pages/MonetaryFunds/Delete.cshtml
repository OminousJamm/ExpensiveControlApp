@page
@model ExpensiveControlApp.Pages.MonetaryFunds.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Delete Monetary Fund</h1>

<h3 class="mb-3 text-danger">Are you sure you want to delete this?</h3>

<div>
    <h4 class="mb-3">MonetaryFund Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 fw-semibold">
            @Html.DisplayNameFor(model => model.MonetaryFund.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MonetaryFund.Name)
        </dd>
        <dt class="col-sm-3 fw-semibold">
            @Html.DisplayNameFor(model => model.MonetaryFund.Type)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MonetaryFund.Type)
        </dd>
    </dl>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="MonetaryFund.Id" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
