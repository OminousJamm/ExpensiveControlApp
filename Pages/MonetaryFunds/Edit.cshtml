@page
@model ExpensiveControlApp.Pages.MonetaryFunds.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Edit Monetary Fund</h1>

<h4 class="mb-3">MonetaryFund</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="MonetaryFund.Id" />

            <div class="mb-3">
                <label asp-for="MonetaryFund.Name" class="form-label">
                    <span class="text-danger">*</span>
                    @Html.DisplayNameFor(m => m.MonetaryFund.Name)
                </label>
                <input asp-for="MonetaryFund.Name" class="form-control" />
                <span asp-validation-for="MonetaryFund.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MonetaryFund.Type" class="form-label">
                    <span class="text-danger">*</span>
                    @Html.DisplayNameFor(m => m.MonetaryFund.Type)
                </label>
                <select asp-for="MonetaryFund.Type" class="form-select"></select>
                <span asp-validation-for="MonetaryFund.Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
