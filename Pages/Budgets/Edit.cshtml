@page
@model ExpensiveControlApp.Pages.Budgets.EditModel

@{
    ViewData["Title"] = "Editar Presupuesto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm rounded-3">
                <div class="card-body">
                    <h3 class="card-title mb-4">Editar Presupuesto</h3>

                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="Budget.Id" />

                        <div class="mb-3">
                            <label asp-for="Budget.ExpenseTypeId" class="form-label">
                                <span class="text-danger">*</span>
                                @Html.DisplayNameFor(m => m.Budget.ExpenseTypeId)
                            </label>
                            <select asp-for="Budget.ExpenseTypeId" class="form-select" asp-items="ViewBag.ExpenseTypeId"></select>
                            <span asp-validation-for="Budget.ExpenseTypeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.MonetaryFundId" class="form-label">
                                <span class="text-danger">*</span>
                                @Html.DisplayNameFor(m => m.Budget.MonetaryFundId)
                            </label>
                            <select asp-for="Budget.MonetaryFundId" class="form-select" asp-items="ViewBag.MonetaryFundId"></select>
                            <span asp-validation-for="Budget.MonetaryFundId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.Month" class="form-label">
                                <span class="text-danger">*</span>
                                @Html.DisplayNameFor(m => m.Budget.Month)
                            </label>
                            <input asp-for="Budget.Month" class="form-control" />
                            <span asp-validation-for="Budget.Month" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.Year" class="form-label">
                                <span class="text-danger">*</span>
                                @Html.DisplayNameFor(m => m.Budget.Year)
                            </label>
                            <input asp-for="Budget.Year" class="form-control" />
                            <span asp-validation-for="Budget.Year" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.Amount" class="form-label">
                                <span class="text-danger">*</span>
                                @Html.DisplayNameFor(m => m.Budget.Amount)
                            </label>
                            <input asp-for="Budget.Amount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Budget.Amount" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a asp-page="./Index" class="btn btn-outline-secondary">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
