@page
@model ExpensiveControlApp.Pages.Budgets.IndexModel

@{
    ViewData["Title"] = "Presupuestos";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Presupuestos</h2>
        <a asp-page="Create" class="btn btn-success">Crear nuevo</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Budget[0].ExpenseType)</th>
                    <th>@Html.DisplayNameFor(model => model.Budget[0].MonetaryFund)</th>
                    <th>@Html.DisplayNameFor(model => model.Budget[0].Month)</th>
                    <th>@Html.DisplayNameFor(model => model.Budget[0].Year)</th>
                    <th>@Html.DisplayNameFor(model => model.Budget[0].Amount)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Budget)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ExpenseType.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.MonetaryFund.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Month)</td>
                        <td>@Html.DisplayFor(modelItem => item.Year)</td>
                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                        <td class="text-center">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Editar</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">Detalles</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
