@page
@model ExpensiveControlApp.Pages.Budgets.CreateModel

@{
    ViewData["Title"] = "Crear Presupuesto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Crear Presupuesto</h1>

            <div class="card shadow-sm rounded-3">
                <div class="card-body">
                    <h5 class="card-title">Información del Presupuesto</h5>
                    <hr />
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Budget.ExpenseTypeId" class="form-label fw-bold">
                                Tipo de Gasto <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Budget.ExpenseTypeId" class="form-select" asp-items="ViewBag.ExpenseTypeId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.MonetaryFundId" class="form-label fw-bold">
                                Fondo Monetario <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Budget.MonetaryFundId" class="form-select" asp-items="ViewBag.MonetaryFundId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.Month" class="form-label fw-bold">
                                Mes <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Budget.Month" class="form-control" />
                            <span asp-validation-for="Budget.Month" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.Year" class="form-label fw-bold">
                                Año <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Budget.Year" class="form-control" />
                            <span asp-validation-for="Budget.Year" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget.Amount" class="form-label fw-bold">
                                Monto <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Budget.Amount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Budget.Amount" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary">Volver</a>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
