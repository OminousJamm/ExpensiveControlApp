@page
@model ExpensiveControlApp.Pages.Budgets.DeleteModel

@{
    ViewData["Title"] = "Eliminar Presupuesto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <div class="alert alert-warning d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                <div>
                    <strong>¿Estás seguro que deseas eliminar este presupuesto?</strong>
                </div>
            </div>

            <div class="card shadow-sm rounded-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Detalle del Presupuesto</h5>
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Budget.ExpenseType)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Budget.ExpenseType.Id)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Budget.MonetaryFund)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Budget.MonetaryFund.Name)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Budget.Month)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Budget.Month)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Budget.Year)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Budget.Year)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Budget.Amount)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Budget.Amount)</dd>
                    </dl>

                    <form method="post" class="mt-4 d-flex justify-content-between">
                        <input type="hidden" asp-for="Budget.Id" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Cancelar</a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
