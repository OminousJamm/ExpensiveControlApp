@page
@model ExpensiveControlApp.Pages.Deposits.CreateModel

@{
    ViewData["Title"] = "Crear depósito";
}

<div class="container mt-4">
    <h2>Crear depósito</h2>
    <hr />

    <div class="row">
        <div class="col-md-6 col-lg-5">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Deposit.Date" class="form-label fw-bold">
                        Fecha <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Deposit.Date" class="form-control" type="date" />
                    <span asp-validation-for="Deposit.Date" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Deposit.Amount" class="form-label fw-bold">
                        Monto <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Deposit.Amount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Deposit.Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Deposit.MonetaryFundId" class="form-label fw-bold">
                        Fondo Monetario <span class="text-danger">*</span>
                    </label>
                    <select asp-for="Deposit.MonetaryFundId" class="form-select" asp-items="ViewBag.MonetaryFundId">
                        <option value="">Seleccione un fondo</option>
                    </select>
                    <span asp-validation-for="Deposit.MonetaryFundId" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
