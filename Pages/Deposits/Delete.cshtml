@page
@model ExpensiveControlApp.Pages.Deposits.DeleteModel

@{
    ViewData["Title"] = "Eliminar depósito";
}

<div class="container mt-4">
    <h2 class="text-danger">¿Está seguro que desea eliminar este depósito?</h2>
    <p class="text-muted">Esta acción no se puede deshacer.</p>

    <h4 class="mt-4">Detalles del depósito</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3 fw-bold">Fecha</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Deposit.Date)</dd>

        <dt class="col-sm-3 fw-bold">Monto</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Deposit.Amount)</dd>

        <dt class="col-sm-3 fw-bold">Fondo Monetario</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Deposit.MonetaryFund.Name)</dd>
    </dl>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Deposit.Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
