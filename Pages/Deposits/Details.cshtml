@page
@model ExpensiveControlApp.Pages.Deposits.DetailsModel

@{
    ViewData["Title"] = "Detalles del depósito";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalles del depósito</h2>

    <dl class="row">
        <dt class="col-sm-3 fw-bold">Fecha</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Deposit.Date)</dd>

        <dt class="col-sm-3 fw-bold">Monto</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Deposit.Amount)</dd>

        <dt class="col-sm-3 fw-bold">Fondo Monetario</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Deposit.MonetaryFund.Name)</dd>
    </dl>

    <div class="mt-4 d-flex gap-2">
        <a asp-page="./Edit" asp-route-id="@Model.Deposit.Id" class="btn btn-primary">Editar</a>
        <a asp-page="./Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
