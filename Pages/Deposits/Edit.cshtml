@page
@model ExpensiveControlApp.Pages.Deposits.EditModel

@{
    ViewData["Title"] = "Editar Depósito";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Depósito</h2>

    <form method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Deposit.Id" />

        <div class="mb-3">
            <label asp-for="Deposit.Date" class="form-label fw-bold">Fecha <span class="text-danger">*</span></label>
            <input asp-for="Deposit.Date" class="form-control" />
            <span asp-validation-for="Deposit.Date" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Deposit.Amount" class="form-label fw-bold">Monto <span class="text-danger">*</span></label>
            <input asp-for="Deposit.Amount" class="form-control" />
            <span asp-validation-for="Deposit.Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Deposit.MonetaryFundId" class="form-label fw-bold">Fondo Monetario <span class="text-danger">*</span></label>
            <select asp-for="Deposit.MonetaryFundId" class="form-select" asp-items="ViewBag.MonetaryFundId"></select>
            <span asp-validation-for="Deposit.MonetaryFundId" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
