@page
@model ExpensiveControlApp.Pages.Deposits.IndexModel

@{
    ViewData["Title"] = "Listado de Depósitos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Listado de Depósitos</h2>
        <a asp-page="Create" class="btn btn-success">Nuevo Depósito</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Deposit[0].Date)</th>
                <th>@Html.DisplayNameFor(model => model.Deposit[0].Amount)</th>
                <th>@Html.DisplayNameFor(model => model.Deposit[0].MonetaryFund)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Deposit)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>@Html.DisplayFor(modelItem => item.MonetaryFund.Name)</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Ver</a>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
