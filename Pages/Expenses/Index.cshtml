@page
@model ExpensiveControlApp.Pages.Expenses.IndexModel

@{
    ViewData["Title"] = "Registros de Gastos";
}

<h1>Registros de Gastos</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Registrar Nuevo Gasto</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Fondo Monetario</th>
            <th>Comercio</th>
            <th>Tipo de Documento</th>
            <th>Total</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExpenseHeaders)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.MonetaryFund?.Name</td>
                <td>@item.CommerceName</td>
                <td>@item.DocumentType</td>
                <td>@item.Details.Sum(d => d.Amount).ToString("C")</td>
                <td>
                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver</a>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
