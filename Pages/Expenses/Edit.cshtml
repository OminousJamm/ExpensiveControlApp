@page "{id:int}"
@using ExpensiveControlApp.Enums
@model ExpensiveControlApp.Pages.Expenses.EditModel
@{
    ViewData["Title"] = "Editar Gasto";
    var details = Model.ExpenseHeader.Details?.ToList() ?? new List<ExpensiveControlApp.Models.ExpenseDetail>();
}

<h1>Editar Gasto</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ExpenseHeader.Id" />

    <div class="form-group">
        <label asp-for="ExpenseHeader.Date"></label>
        <input asp-for="ExpenseHeader.Date" class="form-control" type="date" />
        <span asp-validation-for="ExpenseHeader.Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpenseHeader.MonetaryFundId"></label>
        <select asp-for="ExpenseHeader.MonetaryFundId" class="form-control" asp-items="Model.Funds"></select>
        <span asp-validation-for="ExpenseHeader.MonetaryFundId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpenseHeader.CommerceName"></label>
        <input asp-for="ExpenseHeader.CommerceName" class="form-control" />
        <span asp-validation-for="ExpenseHeader.CommerceName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpenseHeader.DocumentType"></label>
        <select asp-for="ExpenseHeader.DocumentType" class="form-control"
                asp-items="Html.GetEnumSelectList<DocumentType>()"></select>
        <span asp-validation-for="ExpenseHeader.DocumentType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpenseHeader.Observations"></label>
        <textarea asp-for="ExpenseHeader.Observations" class="form-control"></textarea>
        <span asp-validation-for="ExpenseHeader.Observations" class="text-danger"></span>
    </div>

    <h4>Detalles</h4>
    <table class="table" id="details-table">
        <thead>
            <tr>
                <th>Tipo de Gasto</th>
                <th>Monto</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < details.Count; i++)
            {
                <tr>
                    <td>
                        <select class="form-control" name="ExpenseHeader.Details[@i].ExpenseTypeId">
                            @foreach (var item in Model.Types)
                            {
                                <option value="@item.Value" selected="@(item.Value == details[i].ExpenseTypeId.ToString())">
                                    @item.Text
                                </option>
                            }
                        </select>
                    </td>
                    <td>
                        <input class="form-control" name="ExpenseHeader.Details[@i].Amount" value="@details[i].Amount" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="button" class="btn btn-secondary" onclick="addRow()">Agregar Detalle</button>
    <br /><br />
    <input type="submit" value="Guardar" class="btn btn-primary" />
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function removeRow(button) {
            $(button).closest('tr').remove();
        }

        function addRow() {
            const index = $('#details-table tbody tr').length;
            const row = `
                <tr>
                    <td>
                        <select name="ExpenseHeader.Details[${index}].ExpenseTypeId" class="form-control">
        @foreach (var item in Model.Types)
        {
                                    <option value="@item.Value">@item.Text</option>
        }
                        </select>
                    </td>
                    <td>
                        <input name="ExpenseHeader.Details[${index}].Amount" class="form-control" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Eliminar</button>
                    </td>
                </tr>`;
            $('#details-table tbody').append(row);
        }
    </script>
}
