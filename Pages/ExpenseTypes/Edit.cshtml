@page
@model ExpensiveControlApp.Pages.ExpenseTypes.EditModel

@{
    ViewData["Title"] = "Editar Tipo de Gasto";
}

<h1>Editar Tipo de Gasto</h1>

<h4>Información del Tipo de Gasto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExpenseType.Id" />

            <div class="form-group mb-3">
                <label asp-for="ExpenseType.Code" class="control-label"></label>
                <input asp-for="ExpenseType.Code" class="form-control" readonly />
                <span asp-validation-for="ExpenseType.Code" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ExpenseType.Name" class="control-label"></label>
                <input asp-for="ExpenseType.Name" class="form-control" />
                <span asp-validation-for="ExpenseType.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ExpenseType.Description" class="control-label"></label>
                <input asp-for="ExpenseType.Description" class="form-control" />
                <span asp-validation-for="ExpenseType.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
