@page
@model ExpensiveControlApp.Pages.ExpenseTypes.IndexModel

@{
    ViewData["Title"] = "Tipos de Gasto";
}

<h1>Tipos de Gasto Registrados</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Registrar Nuevo Tipo</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ExpenseType[0].Code)</th>
            <th>@Html.DisplayNameFor(model => model.ExpenseType[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.ExpenseType[0].Description)</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExpenseType)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
