@page
@model ExpensiveControlApp.Pages.ExpenseTypes.DeleteModel

@{
    ViewData["Title"] = "Eliminar Tipo de Gasto";
}

<h1 class="mb-4">Eliminar Tipo de Gasto</h1>

<h3>¿Está seguro que desea eliminar este tipo de gasto?</h3>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ExpenseType.Code)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ExpenseType.Code)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ExpenseType.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ExpenseType.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ExpenseType.Description)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ExpenseType.Description)</dd>
    </dl>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="ExpenseType.Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
