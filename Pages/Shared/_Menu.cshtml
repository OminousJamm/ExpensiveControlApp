                {
                    <li class="nav-item">
                        <span class="nav-link">Welcome, @HttpContextAccessor.HttpContext.User.Identity.Name</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/logout">Logout</a>
