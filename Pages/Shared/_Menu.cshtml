                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Reports</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Reports/GetMovements">Movements Report</a></li>
                        <li><a class="dropdown-item" href="/Reports/BudgetExecutionChart">Budget vs Execution Chart</a></li>
                    </ul>
                </li>
